/* pages/login/login.wxss */
.container{
  width: 100vw;
  height: 100%;
  overflow: hidden;
  background-color: white;
}

.nav{
  width: 100%;
  margin: 100rpx 0 0 150rpx; 
  display: flex;
  justify-content: center;
  color:#101010;
}
.nav-bar{
  margin: 0 0 0 0;
  color: #d1d1d1
}
.nav-text{
  margin:0 30rpx 0 0;
  color: #327CF3
}
.nav-textr{
  margin:0 0 0 30rpx;
  color: #d1d1d1
}
.title{
  margin:150rpx 0 0 0;
  display: flex;
  align-items: center;
  flex-direction: column
}
.title-nav{
  font-size: 60rpx;
  color: #327CF3
}
.title-bottom{
  font-size: 35rpx;
  color: #d1d1d1;
  margin: 10rpx 0 0 0
}
.login {
  height: 80rpx;
  display: flex;
  justify-content: center;
  color: #FFF;
  width: 510rpx;
  margin: 150rpx 0 30rpx 120rpx;
  font-size: 28rpx;
  background-color: #327CF3;
  border-radius: 40rpx;
  line-height: 80rpx;
}
.weui-cell_input{
  display: flex;
  align-items: center;
  justify-content: center;
  /* align-content: center; */
  flex-direction: row;
  width: 100%;
  margin: 50rpx 0 0 0;
  
}
.weui-input{
  height: 70rpx;
  width: 70vw;
  border-bottom: 1rpx solid #d1d1d1;
}
.weui-input-code {
  height: 70rpx;
  border-bottom: 1rpx solid #d1d1d1;
}
.weui-input_nav{
  height: 70rpx;
  width: 70vw;
  
  border-bottom: 1rpx solid #d1d1d1;
}
.weui-button{
  height: 80rpx;
  color: #FFF;
  font-size: 28rpx;
  background-color: #327CF3;
  border-radius: 40rpx;
  line-height: 80rpx;
  margin: 0 0 0 30rpx
}
.weui-code-nav{
  display: flex;
  flex-direction: row;
  width: 100vw;
  border: 1px solid red
}
.we_code{
  height: 50rpx;
  display: flex;
  justify-content: center;
  color: #FFF;
  font-size: 28rpx;
  background-color: #327CF3;
  margin: 50rpx 0 0 0;
  border-radius: 40rpx
}
.place-holder {
    font-size: 24rpx;
    margin: 0 0 0 20rpx;
    color:#c6c6c6
}
.foot{
  font-size: 30rpx;
  text-align: center;
  margin: 40rpx 0 0 10vw;
  width: 80vw;
}