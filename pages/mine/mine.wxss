/* pages/mine/mine.wxss */
.container {
  width: 100%;
  overflow: hidden;
}

.nav {
  height: 260rpx;
  background: #327CF3;
  position: absolute;
  left: 0;
  display: block;
  width: 100%;

}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.content {
  height: 460rpx;
  background: white;
  position: absolute;
  width: 90%;
  margin: 500rpx 0 0 5%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.cards {
  z-index: 232;
  position: absolute;
  background: #fff;
  width: 90%;
  margin: 0 5% 0 5%;
  height: 366rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(136, 136, 136, 0.30);
  border-radius: 5rpx;
}

.avatar {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.name-text {
  margin: 15rpx 0 0 0;
  color: #222222;
  font-size: 32rpx;
  text-align: center
}

.infor-text {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  margin: 25rpx 25rpx 0 0;
  font-size: 24rpx;
}

.infor-text view {
  padding: 0 0 0 24rpx;
  font-size: 24rpx;
  color: #a2a2a2
}

.content-nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  margin: 50rpx 0 0 0;
  line-height: 10rpx
}

.content-nav-collection {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  font-size: 28rpx;
}

.line {
  width: 100%;
  border: 0.5px solid #ededed;
  margin: 30rpx 0 -15rpx 0
}

.foot {
  height: 460rpx;
  background: white;
  position: absolute;
  width: 90%;
  margin: 900rpx 0 0 5%;
  display: flex;
  flex-direction: column;
}

.login {
  height: 88rpx;
  color: #666666;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  background: #F7F7F7;
  border: 0px solid #F7F7F7 ;
  width: 510rpx;
  margin: 150rpx 0 30rpx 90rpx;
  border-radius: 44rpx;
  line-height: 88rpx
}

.foots {
  background: #F3F3F3;
  position: absolute;
  width: 90%;
  margin: 880rpx 0 0 0;
  display: flex;
  flex-direction: column;
}