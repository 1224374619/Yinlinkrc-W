.wrapers {
  position: fixed;
  display: flex;
  flex-direction: column;
  width: 100%;
  z-index: 655;
  overflow: hidden;
  margin: 29rpx 0 0 0;
}

.wraper {
  position: fixed;
  display: flex;
  flex-direction: column;
  width: 100%;
  z-index: 655;
  height: 700rpx;
  overflow: hidden;
  margin: 29rpx 0 0 0;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.headers {
  position: fixed;
  top: 0rpx;
  z-index: 25;
  height: 220rpx;
  line-height: 90rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(136,136,136,0.30);
  width: 100%;
}

.main {
  flex: 1;
  position: relative;
  width: 100%;
  height: 100%;
  
}

.mains {
  flex: 1;
  position: relative;
  width: 100%;
  overflow: auto;
}

.main-scroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 120rpx 0 0 0;
  z-index: 110;
  overflow: auto;
}

.main-scrolls {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 120;
}

.main-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
}

.card {
  width: 47vw;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.card-box {
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
  background: #ccc;
}


.card-content {
  color: blue;
}

.footer {
  background: #FFFFFF;
  color: #fff;
  line-height: 100rpx;
  flex: 0 0 100rpx;
