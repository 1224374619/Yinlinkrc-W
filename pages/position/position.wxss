@import "./weui.wxss";

.picker {

  background-color: #FFFFFF;
}

.container {
  width: 100%;
  height: 100%;
}

.nav {
  width: 100%;
  height: 100%;
}

.nav-input {
  width: 90vw;
  display: flex;
  justify-content: center;
  margin: 40rpx 0 0 5vw;
  flex-direction: row;
  height: 65rpx;
}

.radius {
  border-radius: 20rpx;
}

/* .select-container {
  width: 130rpx;
  margin: 30rpx 0 0 0;
} */

.input-container {
  display: flex;
  flex-direction: row;
  margin: 0 0 0 0;
  width: 582rpx;
  border-radius: 30rpx;
  border: 1rpx solid #bebebe;
  height: 60rpx;
}

.input-title {
  margin: 5rpx 0 0 20rpx;
  font-size: 32rpx;
  line-height: 65rpx;
}

.input-icon {
  width: 5%;
  margin: 0 3% 0 10%;
  line-height: 55rpx
}

.input-cas {
  height: 60rpx;
  line-height: 40rpx;
}

.nav-screen {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 40rpx 40rpx 0 40rpx;
  font-size: 32rpx;
  flex: 0 0 100rpx;

}

.checkbox-con {
  margin: 20rpx auto;
  text-align: center;
  position: absolute;
  z-index: 550;
  background: #fff;
  width: 100%
}

.ui-radio radio,
.ui-radio checkbox {
  display: none;
}

.label {
  margin-left: 20rpx;
  flex-direction: row;
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-right: 2vw;
}

.ui-radio {
  border: 1px solid #D9D9D9;
  border-radius: 32px;
  width: 192rpx;
  height: 64rpx;
  text-align: center;
  margin: 28rpx 10rpx 10rpx 30rpx;
  white-space: nowrap;
  font-size: 25rpx;
  line-height: 64rpx;
}


.ui-radio.active {
  /* background-color: #a42a2e; */
  color: #327CF3;
  border-radius: 32px;
  border: 1px solid #327CF3;
  width: 192rpx;
  height: 64rpx;
  text-align: center;
  margin: 28rpx 10rpx 10rpx 30rpx;
  white-space: nowrap;
}

.text {
  color: #000;
  line-height: 70rpx;
  font-size: 25rpx
}

.ui-radio.active .text {
  color: #327CF3;
  line-height: 70rpx;
  font-size: 25rpx
}

.mask-view {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 20;
  overflow: hidden;
  position: absolute;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.content {
  width: 100%;
  position: absolute;
  margin: 270rpx 0 0 0;
  z-index: 20
}

.contents {
  width: 100%;
  position: absolute;
  z-index: 15;
  height: 100%;
  overflow: hidden;
}

.img {
  width: 124rpx;
  height: 124rpx;
  border-radius: 10rpx;
  margin: 0 0 0 40rpx
}

.company-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.aside {
  margin: -10rpx 0 0 20rpx
}

.aside view {
  padding: 5rpx 0 0 0
}

.foot {
  font-size: 25rpx;
  text-align: right;
  margin: 0 30rpx 0 0
}

.line {
  border: 1rpx solid #eeeeee;
  margin: 40rpx 40rpx 40rpx 40rpx
}

.celbutton {
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  font-size: 25rpx;
  border: 1rpx solid #327CF3;
  background-color: #FFFFFF;
  margin: 0 0 0 40rpx;
}

.cellbutton {
  width: 450rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  font-size: 25rpx;
  background-color: #327CF3;
  color: #FFFFFF;
  margin: 0 0 0 60rpx;
}

.active {
  color: #327CF3
}
.activeT {
  color: #327CF3
}

.section {
  margin: 0 0 0 40rpx;
}

